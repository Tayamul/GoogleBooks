# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Controller showing the application's api
GET   /api                 controllers.ApplicationController.index(name: Option[String] ?= None)
POST    /api/create    controllers.ApplicationController.create
GET     /api/:id    controllers.ApplicationController.read(id: String)
PUT     /api/:id    controllers.ApplicationController.update(id: String)
PATCH   /api/:id   controllers.ApplicationController.updateField(id: String)
DELETE     /api/:id    controllers.ApplicationController.delete(id: String)

# Call on Google Books API
GET     /library/google/isbn/:isbn       controllers.ApplicationController.getGoogleBookByIsbn(isbn: String)

# Testing endpoints for rendering HTML files in the browser
GET     /example/:isbn    controllers.ApplicationController.example(isbn: String)

# Adding a new book to the database form
GET     /addbook/form   controllers.ApplicationController.addBook()
POST     /addbook/form   controllers.ApplicationController.addBookForm()